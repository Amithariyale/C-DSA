


//Function to find the lowest common ancestor in a BST. 
Node* LCA(Node *root, int n1, int n2)
{
   //Your code here
   Node* ans=NULL;
   if(root->data<n1 && root->data<n2){
       ans=LCA(root->right,n1,n2);
   }
   else if(root->data>n1 && root->data>n2){
       ans=LCA(root->left,n1,n2);
   }
   else if(root->data<=n1 && root->data>=n2){
       ans=root;
   }
   else{
       ans=root;
   }
   return ans;
}

